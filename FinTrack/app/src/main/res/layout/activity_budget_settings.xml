<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etFoodBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Food Budget"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etTransportBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Transport Budget"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvEntertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entertainment"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etEntertainmentBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Entertainment Budget"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvBills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bills"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etBillsBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Bills Budget"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etShoppingBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Shopping Budget"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSaveBudgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Budgets"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
